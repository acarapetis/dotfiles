# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 1
        separator = "  |  "
}

order += "disk /mnt/windows"
order += "disk /mnt/data"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

battery all {
        format = "%status %percentage (%remaining)"
}

disk "/mnt/windows" {
        prefix_type = "decimal"
        format = "windows: %avail/%total"
}

disk "/mnt/data" {
        prefix_type = "decimal"
        format = "data: %avail/%total"
}

disk "/" {
        prefix_type = "decimal"
        format = "/: %avail/%total free"
        low_threshold = 5
        threshold_type = "gbytes_avail"
}

load {
        format = "load: %1min, %5min, %15min"
}

memory {
        format = "RAM: %available/%total"
        threshold_degraded = "2G"
        format_degraded = "!!!!!! MEMAVAIL: %available/%total !!!!!!"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = "♪ %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse"
        mixer = "Master"
        mixer_idx = 0
}
