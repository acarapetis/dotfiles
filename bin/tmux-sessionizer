#!/usr/bin/env bash
# stolen from https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/scripts/tmux-sessionizer

if [[ $# -eq 1 ]]; then
    selected=$1
else
    dirs="$(find -L ~/github ~/bitbucket ~ -mindepth 1 -maxdepth 1 -type d | grep -vE '/\.')"
    if which zoxide; then
        # Add most commonly used directories to start of list:
        dirs=$(zoxide query --list)$'\n'"$dirs"
        # Remove duplicates without changing order:
        dirs=$(awk '!a[$0]++' <<< "$dirs")
    fi
    selected=$(fzf <<< "$dirs")
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if [ -f "$selected/.micromamba_env" ]; then
    envargs=("-e" "ACTIVATE_MICROMAMBA_ENV=$(cat "$selected/.micromamba_env")")
else
    envargs=()
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected "${envargs[@]}"
fi

tmux switch-client -t $selected_name
